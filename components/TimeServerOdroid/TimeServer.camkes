import <std_connector.camkes>;

import <TimeServerPWM/TimeServerPWM.camkes>;

// import <Timer.idl4>;

#define PWM_IRQ 72

component TimeServerOdroid {
    provides Timer the_timer;
    emits Notification timer_notification;
    
    composition {
        component timerbase timer_hw;
        component TimeServerPWM time_server;

        connection seL4HardwareMMIO timer_mem (from time_server.timer_reg, to timer_hw.timer_reg);
        connection seL4HardwareInterrupt timer_1_irq (from timer_hw.irq, to time_server.irq);

        export time_server.the_timer -> the_timer;
        export time_server.timer_notification -> timer_notification;
    }
    configuration {
        timer_hw.timer_reg_paddr = 0x12DD0000;    //PWM timers
        timer_hw.timer_reg_size = 0x1000;    //PWM timers
        timer_hw.irq_irq_number = PWM_IRQ;  //Timer interrupt

	time_server.pwm_irq = PWM_IRQ;
        time_server.timers_per_client = 6;

/*
        client.timer_attributes = 5;
        client.timer_global_endpoint = "client_timer";
        client.timer_complete_global_endpoint = "client_timer";
*/
    }
}

