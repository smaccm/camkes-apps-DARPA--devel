import "../../interfaces/spi.idl4"; 
import "../../interfaces/can.idl4"; 

component can {
       	provides can_inf can;
	dataport Buf	can_buf;

	uses spi_inf	spi;
	dataport Buf	spi_can;

	consumes IntEvent 	Int;
	emits 	IntEventAck IntAck;

	has semaphore queue_lock;
	has mutex     spi_lock;
}

